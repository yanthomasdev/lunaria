{
  "name": "@lunariajs/core",
  "type": "module",
  "version": "0.0.22",
  "description": "Translation management system for open-source projects",
  "types": "./dist/index.d.ts",
  "bin": {
    "lunaria": "./dist/cli.mjs"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    },
    "./components": {
      "types": "./dist/dashboard/components.d.mts",
      "default": "./dist/dashboard/components.mjs"
    }
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist",
    "config.schema.json",
    "CHANGELOG.md"
  ],
  "keywords": [
    "i18n",
    "translation",
    "dashboard",
    "management"
  ],
  "author": "Yan Thomas",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Yan-Thomas/lunaria",
    "directory": "packages/core"
  },
  "bugs": "https://github.com/Yan-Thomas/lunaria/issues",
  "scripts": {
    "build": "unbuild && pnpm run schema",
    "lint": "tsc",
    "schema": "jiti ./scripts/schema.ts"
  },
  "devDependencies": {
    "@types/micromatch": "^4.0.3",
    "@types/node": "^20.8.9",
    "typescript": "^5.2.2",
    "zod-to-json-schema": "^3.22.1"
  },
  "dependencies": {
    "@lit-labs/ssr": "^3.2.0",
    "fast-glob": "^3.3.1",
    "jiti": "^1.21.0",
    "lit": "^3.1.0",
    "micromatch": "^4.0.5",
    "path-to-regexp": "^6.2.1",
    "rehype": "^13.0.1",
    "rehype-format": "^5.0.0",
    "simple-git": "^3.20.0",
    "ufo": "^1.3.1",
    "ultramatter": "^0.0.4",
    "zod": "^3.22.4",
    "zod-validation-error": "^2.1.0"
  }
}
