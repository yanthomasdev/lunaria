{
  "$schema": "./node_modules/@lunariajs/core/config.schema.json",
  "repository": {
    "name": "Yan-Thomas/lunaria",
    "rootDir": "examples/vitepress"
  },
  "files": [
    {
      "location": "ui/**/*.{json,cjs,mjs,js,mts,ts,yml}",
      "pattern": "ui/@lang/@path",
      "type": "dictionary",
      "optionalKeys": {
        "ui/nav.json": ["today"],
        "ui/ui.cjs": ["type"],
        "ui/ui.js": ["type"],
        "ui/ui.mjs": ["type"],
        "ui/ui.mts": ["type"],
        "ui/ui.ts": ["type"],
        "ui/ui.yml": ["here"]
      }
    },
    {
      "location": "**/*.md",
      "pattern": "@lang/@path"
    }
  ],
  "defaultLocale": {
    "label": "English",
    "lang": "en"
  },
  "locales": [
    {
      "label": "PortuguÃªs",
      "lang": "pt"
    },
    {
      "label": "Spanish",
      "lang": "es"
    }
  ],
  "translatableProperty": "i18nReady",
  "renderer": "./renderer.config.ts"
}
